<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80ff0000"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/alert_info1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="Sending Panic"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/alert_info2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:fontFamily="sans-serif-light"
        android:paddingLeft="3dp"
        android:paddingRight="3dp"
        android:text="Alert"
        android:textColor="@color/white"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/time_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:text="20"
        android:textColor="@color/white"
        android:textSize="120dp" />

       <TextView
        android:id="@+id/alert_info3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_weight="2"
        android:fontFamily="sans-serif"
        android:text="	SfTrip will send message immediately to your relative"
        android:textColor="@color/white"
        android:textSize="24dp" />

    <Button
        android:id="@+id/btn_alert_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="2"
        android:background="#404040"
        android:text="Cancel"
        android:textColor="@color/white"
        android:textSize="30dp" />

</LinearLayout>